# API settings
SECRET_KEY=your_development_secret_key_change_in_production
API_V1_STR=/api

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Supabase settings
SUPABASE_URL=https://yoursupabseid.supabase.co
SUPABASE_KEY=your_supabase_key
# For local Supabase setup
SUPABASE_LOCAL_URL=http://localhost:8080
SUPABASE_LOCAL_KEY=postgres
SUPABASE_DB_HOST=supabase-db
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=postgres
# Set to 'local' to use local Supabase, 'cloud' to use Supabase cloud
SUPABASE_ENV=local

# OpenAI settings
OPENAI_API_KEY=your_openai_api_key
DEFAULT_MODEL=gpt-4-1106-preview

# SendGrid settings
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=crm@yourdomain.com

# Twilio settings
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Sentry settings (optional)
SENTRY_DSN=your_sentry_dsn

# Feature flags
ENABLE_AI_FEATURES=true
ENABLE_EMAIL=true
ENABLE_SMS=true
ENABLE_CALL_TRACKING=true 